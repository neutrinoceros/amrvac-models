!==============================================
! Use this as a secondary configuration file:
!
! ./amrvac -i config1D.par to2D.par
!==============================================

&usr_list
  usr_geometry = 'rphi'
/

&meshlist
  !> azimuthal domain (given in 2pi units) 
  xprobmin2 = 0.0
  xprobmax2 = 1.0

  domain_nx2 = 628
  block_nx2  = 314
/


&boundlist
  !> azimuthal boundaries
  typeboundary_min2 = 3*'periodic'
  typeboundary_max2 = 3*'periodic'
/


&filelist
  ! when using multiple configuration files defining 'base_filename',
  ! the final value of the parameter will be a concatenated string.
  base_filename = '2D'
/
